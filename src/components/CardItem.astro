---
import { nameToPath } from "../utils/nameToPath.ts";

interface Props {
  img: string;
  name: string;
  color: string;
  id: string;
}

interface Colors {
  [color: string]: { bg: string };
}

const { img, name, color, id } = Astro.props;
const href = nameToPath({ name });

const colors: Colors = {
  yellow: { bg: "bg-yellow" },
  red: { bg: "bg-red" },
  blue: { bg: "bg-blue" },
  fuchsia: { bg: "bg-fuchsia" },
  ocher: { bg: "bg-ocher" },
  purple: { bg: "bg-purple" },
};
---

<li
  id={"card-" + color}
  class=`architect_items relative w-full max-w-[8rem] h-full aspect-[9/14] rounded-xl overflow-hidden shadow-md ${colors[color].bg} group-hover:grayscale hover:!grayscale-0 transition-all duration-150`
>
  <a href={href} class="h-full w-full">
    <h2
      class="absolute bottom-2 left-2 right-2 text-xl leading-none text-white font-black z-10 font-source-code"
      transition:name=`name-${id}`
    >
      {name}
    </h2>
    <img
      src={img}
      alt=`ImÃ¡gen de la Arquitecta ${name}`
      class="h-full w-full object-cover"
    />
  </a>
</li>
