---
import Layout from "@layouts/Layout.astro";
import Logo from "@components/Logo.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import LogoWrapper from "@components/LogoWrapper.astro";
import CardsList from "@components/CardsList.astro";
---

<Layout title="Mujeres, patrimonio y arquitectura local">
  <Header logo={false} />
  <main class="w-full flex flex-col items-center px-14">
    <LogoWrapper>
      <Logo large />
    </LogoWrapper>
    <section class="-mt-16">
      <h1
        class="text-3xl text-light-grey font-light leading-none flex flex-col"
      >
        <strong class="text-5xl font-black text-dark-grey">arquitectas</strong>
         referentes
      </h1>
      <CardsList />
    </section>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const shapes = document.querySelectorAll(".shapes");
    const items = document.querySelectorAll(".architect_items");

    items.forEach((item, index) => {
      item.addEventListener("mouseover", () => {
        shapes.forEach((shape, i) => {
          if (!item.id.includes(shape.id)) {
            shape.classList.add("unfocused");
          }
        });
      });

      item.addEventListener("mouseout", () => {
        shapes.forEach((shape) => {
          shape.classList.remove("unfocused");
        });
      });
    });
  });
</script>
