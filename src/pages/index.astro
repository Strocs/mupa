---
import Layout from "../layouts/Layout.astro";
import Logo from "@components/Logo.astro";
import Footer from "@components/Footer.astro";
import CardItem from "@components/CardItem.astro";
import NavLink from "@components/NavLink.astro";

import { LEAD_ARCHITECTS } from "../data/lead-architects.js";
---

<Layout title="Mujeres, patrimonio y arquitectura local">
  <header class=`w-full h-10 flex items-center justify-end`>
    <nav class="flex gap-6 flex-shrink-0">
      <NavLink href="/">inicio</NavLink>
      <NavLink href="/">el proyecto</NavLink>
      <NavLink href="/">arquitectas</NavLink>
      <NavLink href="/">equipo</NavLink>
    </nav>
  </header>
  <main class="w-full flex flex-col items-center px-14 -mt-16">
    <Logo size="large" />
    <section class="-mt-16">
      <h1
        class="text-4xl text-light-grey font-light leading-none flex flex-col"
      >
        <strong class="text-6xl font-black text-dark-grey">arquitectas</strong>
         referentes
      </h1>
      <ul class="flex flex-wrap gap-4">
        {
          LEAD_ARCHITECTS.map((architect) => (
            <CardItem
              name={architect.short_name}
              img={architect.main_img}
              color={architect.color}
              id={architect.id}
            />
          ))
        }
      </ul>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const shapes = document.querySelectorAll(".shapes");
    const items = document.querySelectorAll(".architect_items");

    items.forEach((item, index) => {
      item.addEventListener("mouseover", () => {
        shapes.forEach((shape, i) => {
          if (!item.id.includes(shape.id)) {
            shape.classList.add("unfocused");
          }
        });
      });

      item.addEventListener("mouseout", () => {
        shapes.forEach((shape) => {
          shape.classList.remove("unfocused");
        });
      });
    });
  });
</script>
