---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Visibilizando el legado femenino en la producción arquitectónica de las ciudades de La Serena y Coquimbo."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{"MUPA | " + title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions fallback="none" />
  </head>
  <body class="w-full h-full min-h-[100dvh] flex flex-col p-8">
    <div
      aria-hidden="true"
      class="w-full bg-white max-w-screen-2xl rounded-2xl grid grid-rows-[1fr_auto_1fr] flex-grow m-auto px-8 sm:px-12 overflow-y-scroll overflow-x-hidden relative"
    >
      <slot />
    </div>
    <style is:global>
      html {
        background: url("/background.png") no-repeat fixed top;
        background-size: cover;
        font-family: "Helvetica", "Arial Narrow", Arial, sans-serif;
        height: 100%;
        width: 100%;
      }

      @font-face {
        font-family: "Helvetica";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("fonts/HelveticaNeueCyr-Medium.woff2") format("woff2");
      }
      @font-face {
        font-family: "Helvetica";
        font-style: normal;
        font-weight: 300;
        font-display: swap;
        src: url("fonts/HelveticaNeueCyr-Light.woff2") format("woff2");
      }
      @font-face {
        font-family: "Helvetica";
        font-style: normal;
        font-weight: 200;
        font-display: swap;
        src: url("fonts/HelveticaNeueCyr-Thin.woff2") format("woff2");
      }
      @font-face {
        font-family: "Helvetica";
        font-style: normal;
        font-weight: 700;
        font-display: swap;
        src: url("fonts/HelveticaNeueCyr-Bold.woff2") format("woff2");
      }

      /* .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      .scrollbar-hide::-webkit-scrollbar {
        display: none;
      } */

      ::-webkit-scrollbar {
        width: 0.5rem;
        margin-right: 0.5rem;
      }

      ::-webkit-scrollbar-thumb {
        -webkit-border-radius: 5px;
        border-radius: 5px;
        background: #d6a6bd;
      }
      ::-webkit-scrollbar-thumb:window-inactive {
        background: #999;
      }
    </style>
  </body>
</html>
